<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0"
xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
<xsl:template match="entry">
<html>
<body>
  <h2>Project Feeds</h2>
  <table border="1">
    <tr bgcolor="#9acd32">
      <th>Title</th>
      <th>Link</th>
    </tr>
    <xsl:for-each select="entry">
    <tr>
      <td><xsl:value-of select="title"/></td>
      <xsl:choose>
      <xsl:when test="updated > 10">
         <td bgcolor="#ff00ff">
         <xsl:value-of select="id"/>
         </td>
      </xsl:when>
      <xsl:otherwise>
         <td><xsl:value-of select="id"/></td>
      </xsl:otherwise>
      </xsl:choose>
    </tr>
    </xsl:for-each>
  </table>
</body>
</html>
</xsl:template>
</xsl:stylesheet>
